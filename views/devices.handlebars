{{#if posts.length}}
<section class="mx-5">
  <h1 class="text-secondary text-center mt-5 pb-5">Devices</h1>
  <ol class="p-0">
    {{#each posts as |post|}}
    <li class="my-3 d-flex justify-content-center">
      {{> device-info post}}
    </li>
    {{/each}}
  </ol>
</section>

{{/if}}

<div class="d-flex justify-content-center mt-5">
  <a href="/add-device" class="btn btn-primary add-device">Add Device</a>
</div>
