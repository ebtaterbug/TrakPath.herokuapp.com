<div class="p-0 row justify-content-around">
  <div class="card row p-0 w-50 mt-5">
      <h2 class="card-header text-center text-secondary">New Alert</h2>
      <form class="new-post-form">
        
        <div class="card-body text-center mt-4">
          <form>
            <div class="form-group row">
              <input type="number" id="device" name="device" class="form-control col m-2" placeholder="Device ID" />
            </div>
            <div class="form-group row">
              <input type="number" id="phone-number" name="phone-number" class="form-control col m-2" placeholder="Phone Number" />
            </div>
            <div class="form-group row">
              <input type="number" id="maxtemp" name="maxtemp" class="form-control col m-2" placeholder="Max Temperature" />
            </div>
            <div class="form-group row">
              <input type="number" id="mintemp" name="mintemp" class="form-control col m-2" placeholder="Min Temperature" />
            </div>
            <button type="submit" class="btn btn-primary mt-3">Add</button>
          </form>
        </div>

      </form>
  </div>

  {{#if alerts.length}}
    <section class="mx-5">
    <ol class="p-0">
        {{#each alerts as |alert|}}
        <li class="my-3 d-flex justify-content-center">
        {{> alert-info alert}}
        </li>
        {{/each}}
    </ol>
    </section>

{{/if}}
</div>  

<script src="/javascript/alert.js"></script>